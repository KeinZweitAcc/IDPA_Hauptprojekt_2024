<Window x:Class="IDPA_Hauptprojekt_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDPA_Hauptprojekt_2024"
        mc:Ignorable="d"
        Closing="MainWindow_OnClosing"
        Title="MainWindow"
        WindowState="Maximized">

    <Grid Background="#F2F2F2">
        <TextBox x:Name="TextBoxScenario" HorizontalAlignment="Stretch" Margin="50,45,50,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="109" FontSize="20" Background="#E6E6E6" BorderBrush="#BCBCBC" BorderThickness="2" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY"/>
        <Button x:Name="ButtonSubmitScenario" Content="Submit" HorizontalAlignment="Stretch" Margin="50,159,50,0" VerticalAlignment="Top" Height="31" FontSize="20" Background="#E6E6E6" BorderBrush="#BCBCBC" BorderThickness="2" Click="ButtonSubmitScenario_Click" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY" />
        <Label Content="Fallbeispiel:" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY"/>
        <Label Content="Möglicherweise relevante Gesetzesartikel:" HorizontalAlignment="Left" Margin="50,198,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY"/>

        <ListBox x:Name="ListBoxArticles" ItemsSource="{Binding Articles}" HorizontalAlignment="Stretch" Margin="50,235,50,50" VerticalAlignment="Stretch" Background="#E6E6E6" BorderBrush="#BCBCBC" BorderThickness="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ArticleNr}" FontWeight="Bold" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY" FontSize="15"/>
                        <TextBlock Text="{Binding ArticleDescription}" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY" FontSize="15"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label x:Name="NoArticleMessage" Content="Kein Artikel wurde gefunden" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial" HorizontalContentAlignment="Center" Foreground="Red" Visibility="Hidden"/>

        <Button x:Name="SourceButton" Content="Quellen" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,10" Width="77" Height="30" FontSize="15" Click="SourceButton_Click" FontFamily="pack://application:,,,/Fonts/#MADE TOMMY" Background="#E6E6E6" BorderBrush="#BCBCBC" BorderThickness="2">

        </Button>
        

    </Grid>
</Window>
